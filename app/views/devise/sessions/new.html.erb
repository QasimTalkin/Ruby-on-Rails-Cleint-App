 <!-- Demo content-->
 <div class="container">
  <div class="row">
      <div class="col-lg-10 col-xl-7 mx-auto">
          <h2 class="display-4">Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field", class="form-group mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control rounded-pill border-0 shadow-sm px-4" %>
  </div>
  <br/>
  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control rounded-pill border-0 shadow-sm px-4"  %>
  </div>
<br/>
  <% if devise_mapping.rememberable? %>
    <div class="field form-check form-switch float-left" style="
    left: 10px;
    bottom: 10px;">
      <%= f.check_box :remember_me, class:"form-check-input"%>
      <%= f.label :remember_me, class:"form-check-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" %>
  </div>
<% end %>

      </div>
  </div>
  <br>

</div><!-- End -->



