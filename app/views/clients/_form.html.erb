<%= form_with(model: client) do |form| %>

  <% if client.errors.any? %>
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= form.text_field :fname, class:"form-control", placeholder:"First Name"  %>
  </div>

  <div class="form-group field">
    <%= form.text_field :lname , class:"form-control", placeholder:"Last Name"  %>
  </div>

  <div class="form-group field">
    <%= form.text_field :mealType, class:"form-control", placeholder:"Meal Type"   %>
  </div>

  <div class="form-group field">
    <%= form.text_field :email, class:"form-control", placeholder:"Email@"   %>
  </div>

  <div class="form-group field">
    <%= form.number_field :phone, class:"form-control", placeholder:"Phone Number"   %>
  </div>

  <div class="form-group field">
    <%= form.text_field :address, class:"form-control", placeholder:"Address"   %>
  </div>

  <div class="form-group field">
    <%= form.number_field :user_id, id: :client_user_id, class:'form-control', value: current_user.id, type: :hidden%>
  </div>

  <div class="form-group field">
    <%= form.text_area :notes, class:"form-control", placeholder:"Additional Notes"   %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-bg btn-primary"%>
  </div>
  <br>


<% end %>
